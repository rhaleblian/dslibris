#!/usr/bin/env sh

sudo apt install wget

if [ $(uname) == 'Linux' && -f /etc/debian_version ]
then
	wget https://github.com/devkitPro/pacman/releases/download/v1.0.2/devkitpro-pacman.amd64.deb
	sudo apt install -y ./devkitpro-pacman.amd64.deb
fi

sudo dkp-pacman -S default-arm7 devkitARM devkitarm-crtls devkitarm-rules devkitpro-keyring dstools grit libfat-nds libnds nds-bzip2 nds-freetype nds-libexpat nds-libpng nds-pkg-config nds-zlib ndstool 

