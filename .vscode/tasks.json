{
	"version": "2.0.0",
	"tasks": [
		{
            "label": "melonDS",
            "type": "shell",
            "isBackground": false,
            "command": "/Applications/melonDS.app/Contents/MacOS/melonDS",
            "args": [
                "${workspaceFolder}/${workspaceFolderBasename}.nds"
            ],
            "presentation": {
                "clear": true,
                "reveal": "always"
            },
            "problemMatcher": []
        },
		{
			"type": "cppbuild",
			"label": "C/C++: arm-none-eabi-gcc build active file",
			"command": "/opt/devkitpro/devkitARM/bin/arm-none-eabi-gcc",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"-Wall -O2 -ffunction-sections -fdata-sections -march=armv5te -mtune=arm946e-s -ffast-math -mthumb"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"detail": "compiler: /opt/devkitpro/devkitARM/bin/arm-none-eabi-gcc"
		}
	]
}